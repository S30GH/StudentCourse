@model StudentCourse.Models.CourseDetalj

@{
    ViewData["Title"] = "UpdateCourse";
}

<h2>Uppdatera uppgifter om kursen</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Co_Name" class="control-label"></label>
                <input asp-for="Co_Name" class="form-control" />
                <span asp-validation-for="Co_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Co_Period" class="control-label"></label>
                <input asp-for="Co_Period" class="form-control" />
                <span asp-validation-for="Co_Period" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Co_Studyrate" class="control-label"></label>
                <input asp-for="Co_Studyrate" class="form-control" />
                <span asp-validation-for="Co_Studyrate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Co_Id" class="control-label"></label>
                <input asp-for="Co_Id" class="form-control" />
                <span asp-validation-for="Co_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

Antal rader uppdaterade: @ViewBag.antal
Eventuellt felmeddelande: @ViewBag.error

