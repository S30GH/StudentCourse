@model StudentCourse.Models.StudentDetalj

@{
    ViewData["Title"] = "InsertStudent";
}

<h2>InsertStudent</h2>

<h4>StudentDetalj</h4>

@ViewBag.error
@ViewBag.antal

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="St_Firstname" class="control-label">Förnamn</label>
                <input asp-for="St_Firstname" class="form-control" />
                <span asp-validation-for="St_Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="St_Lastname" class="control-label">Efternamn</label>
                <input asp-for="St_Lastname" class="form-control" />
                <span asp-validation-for="St_Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="St_Pnr" class="control-label">Personnummer</label>
                <input asp-for="St_Pnr" class="form-control" />
                <span asp-validation-for="St_Pnr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

